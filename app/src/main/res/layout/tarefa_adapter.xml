<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="86dp"
        android:background="#dbd492"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/icon_tarefa"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_tarefa"
            tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:text="Titulo"
                android:textColor="@color/cortexTitleBar"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/status_tarefa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:text="Em andamento..."
                android:textColor="@color/cortexTitleBar"
                android:textSize="18sp"
                android:textStyle="italic" />

            <!--<Switch
                android:id="@+id/completar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:checked="true"
                android:text="Status:"
                android:textColor="@color/cortexTitleBar"
                android:textStyle="bold" />
            -->
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>